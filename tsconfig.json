{
    "compilerOptions": {
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "rootDir": "./",
      "jsx": "react",
      "outDir": "dist",
      "module": "commonjs",
      "target": "es5",
      "moduleResolution": "node",
      "importHelpers": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "pretty": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "declaration": true,
      "maxNodeModuleJsDepth": 5,
      "strict": true,
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "suppressImplicitAnyIndexErrors": true,
      "lib": ["es2020", "dom"],
      "paths": {
        "*": ["typings/*"]
      }
    },
    "include": [
      "DbViewerApiFake.ts",
      "index.tsx",
      "src/**/*",
      "stories/**/*",
      "tests/**/*",
      "typings/**/*"
    ]
  }
  